{
  "name": "topstep-bot",
  "version": "0.1.0",
  "description": "TradingView webhook to TopstepX trading bot",
  "scripts": {
    "dev": "vercel dev",
    "build": "npm run dashboard:build && tsc",
    "dashboard:dev": "vite --config dashboard/vite.config.ts",
    "dashboard:build": "vite build --config dashboard/vite.config.ts",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run test:e2e",
    "db:migrate": "vite-node scripts/migrate.ts",
    "bot": "vite-node src/bot/cli.ts --",
    "backtest": "vite-node src/bot/backtest/cli.ts --"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.0",
    "@neondatabase/serverless": "^0.10.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/supabase-js": "^2.95.3",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^3.2.29",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vercel": "^33.0.0",
    "vite": "^7.3.1",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": "20.x"
  }
}
