{
  "name": "topstep-bot",
  "version": "0.1.0",
  "description": "TradingView webhook to TopstepX trading bot",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "tsc",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^3.2.29",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "vercel": "^33.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
