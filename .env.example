# TopstepX Trading Bot - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED - Application
# =============================================================================

# TopstepX/ProjectX API Credentials
TOPSTEPX_USERNAME=your-username
TOPSTEPX_API_KEY=your-api-key

# Webhook Security (generate: openssl rand -hex 32)
WEBHOOK_SECRET=your-webhook-secret-here

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# REQUIRED - ADW Autonomous Workflow
# =============================================================================

# Anthropic API Key (for Claude Code CLI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# GitHub Personal Access Token (for gh CLI operations)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow, write:packages
GITHUB_PAT=ghp_your-github-pat

# Supabase Access Token (for direct SQL execution)
# Get from: https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN=sbp_your-access-token

# =============================================================================
# OPTIONAL - Application
# =============================================================================

# TopstepX API URLs (usually don't need to change)
TOPSTEPX_API_URL=https://api.topstepx.com/api
TOPSTEPX_USER_HUB_URL=https://rtc.topstepx.com/hubs/user
TOPSTEPX_MARKET_HUB_URL=https://rtc.topstepx.com/hubs/market
TOPSTEPX_ACCOUNT_NAME=optional-account-name

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development

# =============================================================================
# OPTIONAL - ADW Features
# =============================================================================

# Cloudflare R2 for screenshot uploads (optional)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_DOMAIN=
